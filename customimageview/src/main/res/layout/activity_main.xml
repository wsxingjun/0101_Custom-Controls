<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingman.www.customimageview.MainActivity">

    <com.codingman.www.customimageview.View.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image = "@mipmap/ic_launcher"
        app:imageScaleType = "center"
        app:titleText = "hello baby!!!"
        app:titleTextColor = "#ff0000"
        app:titleTextSize = "30sp"/>

    <com.codingman.www.customimageview.View.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleText="helloworldwelcome"
        app:titleTextColor="#00ff00"
        app:titleTextSize="20sp"/>

    <com.codingman.www.customimageview.View.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:image="@mipmap/lmj"
        app:imageScaleType="center"
        app:titleText="妹子~"
        app:titleTextColor="#ff0000"
        app:titleTextSize="12sp"/>


</LinearLayout>
