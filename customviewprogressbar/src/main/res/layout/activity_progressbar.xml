<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <com.oztaking.www.customviewprogressbar.HorizontalProgressBarWithNum
            android:id="@+id/cpb_customHorizontalprogressBar"
            app:progress_reached_bar_height="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp"/>

        <com.oztaking.www.customviewprogressbar.HorizontalProgressBarWithNum
            android:id="@+id/pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            app:progress_text_color="#cccccc"
            app:progress_unreached_color="@color/colorAccent"
            />
    </LinearLayout>
</ScrollView>